<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ViewMovieFragment1"
    android:background="@color/black">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/background_covering_ll"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_250sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/light_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/movie_scr_Cv1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_282sdp"
            app:cardCornerRadius="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cl_tab"
            app:cardPreventCornerOverlap="false"
            >

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/movie_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:autoPlay="false"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shadow"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_movie_view_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_17sdp"
                    android:layout_marginTop="@dimen/_160sdp"
                    android:fontFamily="@font/work_sans_vf"
                    android:text="@string/action_thriller"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_movie_view_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_17sdp"
                    android:fontFamily="@font/work_sans_vf"
                    android:text="@string/tenet"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_movie_view_1" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_movie_view_1"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:src="@drawable/rectangle_2173"
                    app:layout_constraintBottom_toBottomOf="@id/tv_movie_view_2"
                    app:layout_constraintStart_toEndOf="@id/tv_movie_view_2"
                    app:layout_constraintTop_toTopOf="@id/tv_movie_view_2" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/_d"
                    app:layout_constraintBottom_toBottomOf="@id/iv_movie_view_1"
                    app:layout_constraintEnd_toEndOf="@id/iv_movie_view_1"
                    app:layout_constraintStart_toStartOf="@id/iv_movie_view_1"
                    app:layout_constraintTop_toTopOf="@id/iv_movie_view_1" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_movie_view_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_17sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:text="2020"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/work_sans_vf"
                    android:drawableStart="@drawable/calendar"
                    android:textStyle="bold"
                    android:drawablePadding="@dimen/_3sdp"
                    app:layout_constraintTop_toBottomOf="@id/tv_movie_view_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_movie_view_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2h 13min"
                    android:layout_marginStart="@dimen/_9sdp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/work_sans_vf"
                    android:drawableStart="@drawable/duration"
                    android:drawablePadding="@dimen/_3sdp"
                    app:layout_constraintStart_toEndOf="@id/tv_movie_view_3"
                    app:layout_constraintTop_toTopOf="@id/tv_movie_view_3"
                    app:layout_constraintBottom_toBottomOf="@id/tv_movie_view_3"

                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_imdb_logo"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:src="@drawable/imdb"
                    android:layout_marginEnd="@dimen/_50sdp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_movie_view_4"
                    app:layout_constraintTop_toTopOf="@id/tv_movie_view_4"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/tv_imdb_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.8/10"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/work_sans_vf"
                    android:textFontWeight="400"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_imdb_logo"
                    app:layout_constraintTop_toTopOf="@id/iv_imdb_logo"
                    app:layout_constraintBottom_toBottomOf="@id/iv_imdb_logo"/>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/play_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/group_3141"
                    android:backgroundTint="@color/transparent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.360" />


            </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.cardview.widget.CardView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_tab"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/movie_scr_Cv1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/movie_scr_cardlayout_viewpager"
        >
        <LinearLayout
            android:id="@+id/ll1_schedule"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@color/light_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal" />
        <LinearLayout
            android:id="@+id/ll2_schedule"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal" />
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/movie_scr_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            app:tabBackground="@drawable/tab_selector"
            android:background="@drawable/movie_scr_cardlayout_viewpager"
            android:backgroundTint="@color/transparent"
            app:tabGravity="fill"
            app:tabIndicator="@color/transparent"
            app:tabRippleColor="@color/transparent"
            app:tabSelectedTextColor="@color/black"
            app:tabTextColor="#6F6F6F"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >


            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/schedule"

                />
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_movie"
                />
        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/movie_scr_viewpager2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/light_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_scr_tab_layout"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>